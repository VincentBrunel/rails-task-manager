<h1>List of tasks</h1> 

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, "/tasks/#{task.id}" %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "Delete", delete_task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>
<p><%= link_to "New task", "/tasks/new" %></p>
